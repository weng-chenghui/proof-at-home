FROM golang:1.24-alpine AS builder

RUN apk add --no-cache git

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /pah-pocketbase ./cmd/pocketbase

FROM alpine:3.20

RUN apk add --no-cache ca-certificates

COPY --from=builder /pah-pocketbase /pah-pocketbase
COPY problems/ /problems/

ENV PROBLEMS_DIR=/problems

EXPOSE 8090

ENTRYPOINT ["/pah-pocketbase", "serve", "--http=0.0.0.0:8090"]
